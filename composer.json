{
    "name": "arnaud-ritti/wp-hook",
    "description": "Use PHP Docblock (annotations) to register WordPress hooks, filters and shortcodes.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Arnaud Ritti",
            "email": "arnaud.ritti@gmail.com"
        },
        {
            "name": "Dukagjin Surdulli",
            "email": "me@dukagj.in"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "doctrine/annotations": "^1.6"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Ari\\WpHook\\": "src/"
        },
        "files": [
            "src/Helpers/Utils.php",
            "src/Helpers/RegisterAnnotations.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ari\\WpHook\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
